<%- include('./partials/navbar.ejs') %>
    <div class="grid min-h-screen place-items-center bg-[#FFFFFF]">
        <form class="border rounded-md shadow-xl bg-[#ef5ef5] p-20" action="/blog" method="POST">
            <div class="flex items-center justify-center text-black font-bold uppercase">Write Blog</div>
            <div class="form-control">
                <label class="label">
                    <span class="label-text text-black">Date</span>
                </label>
                <label class="input-group">
                    <span>Date</span>
                    <input type="text" placeholder="Date" class="input input-bordered" name="date" />
                </label>
            </div>
            <div class="form-control">
                <label class="label">
                    <span class="label-text text-black">Name of the blog</span>
                </label>
                <label class="input-group">
                    <span>Name</span>
                    <input type="text" placeholder="name" class="input input-bordered" name="name" />
                </label>
            </div>
            <div class="form-control">
                <label class="label">
                    <span class="label-text text-black">Content</span>
                </label>
                <label class="input-group">
                    <span>Content</span>
                    <input type="textarea" class="input input-bordered" name="content" />
                </label>
            </div>
            <div class="grid place-items-center mt-10">
                <button class="btn btn-success" type="submit">Sign up</button>
            </div>
        </form>
    </div>
    </body>

    </html>